generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  wikis     Member[]
}

model Wiki {
  id        String     @id @default(cuid())
  title     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  users     Member[]
  folders   Folder[]
  documents Document[]
  tags      Tag[]
}

model Member {
  id       String   @id @default(cuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  wiki     Wiki     @relation(fields: [wikiId], references: [id])
  wikiId   String
  role     String
  default  Boolean
  joinedAt DateTime @default(now())
}

model Folder {
  id        String     @id @default(cuid())
  title     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  wiki      Wiki       @relation(fields: [wikiId], references: [id])
  wikiId    String
  parent    Folder?    @relation("Tree", fields: [parentId], references: [id])
  parentId  String?
  children  Folder[]   @relation("Tree")
  tags      Tag[]
  documents Document[]
}

model Document {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  wiki      Wiki     @relation(fields: [wikiId], references: [id])
  wikiId    String
  folder    Folder?  @relation(fields: [folderId], references: [id])
  folderId  String?
  tags      Tag[]
}

model Tag {
  id        String     @id @default(cuid())
  title     String
  color     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  wiki      Wiki       @relation(fields: [wikiId], references: [id])
  wikiId    String
  folders   Folder[]
  documents Document[]
}
